<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    android:orientation="vertical"
    tools:context=".navigation.AddProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36dp"
        android:background="@drawable/top_rounded_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="პროდუქტის დამატება"
            android:textColor="#191717"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:textSize="15sp"
            android:background="@drawable/my_edittext_bg"
            android:hint="პროდუქტის დასახელება"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/enter_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/my_edittext_bg"
            android:hint="ფასი"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/enter_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/my_edittext_bg"
            android:hint="სურათის ლინკი"
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/enter_product_description"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/my_edittext_bg"
            android:hint="პროდუქტის აღწერა"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/my_button_bg"
            android:enabled="false"
            android:text="დამატება"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>